<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.TECH4300A2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <!-- MATH QUIZ -->
    <style name="title">
        <item name="android:textSize">40sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPurple</item>
        <item name="android:paddingHorizontal">3dp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <!-- Second Act Label -->
    <style name="label">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingHorizontal">3dp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <!-- Overall Score -->
    <style name="totalScore">
        <item name="android:textSize">40sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:paddingHorizontal">3dp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>




    <style name="heading1">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">3dp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="btnPrimary">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <!-- Material Outlined Btn overrides styles, I added the attributes on the View directly-->
    <style name="btnSecondary">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textColor">@color/colorPurple</item>
    </style>

    <style name="question">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="btnTrue">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:background">@drawable/btncontainer</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="btnFalse">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:background">@drawable/btncontainer</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="btnMChoice">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:background">@drawable/btncontainer</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="feedback">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="Theme.TECH4300A2" parent="Base.Theme.TECH4300A2" />
</resources>